<h1>Title: <%= book.title %></h1>
<p><strong>Author:</strong> <a href="<%= href=book.author.url %>"><%= book.author.name %></a></p>
<p><strong>Summary:</strong><%= book.summary %> </p>
<p><strong>ISBN:</strong><%= book.isbn %> </p>
<p><strong>Genre:</strong>
  <% if(book.genre.length > 0){ %>
  <% for(let val in book.genre) { %>
  <a href="<%= book.genre[val].url%>"><%= book.genre[val].name %></a>
  <% if(Number(val) < book.genre.length-1 ) { %>
  <span>,</span>
  <% }   %>
  <% } %>
  <%} else {   %>
<p></p>
<% } %>
</p>


<div style='margin-left:20px;margin-top:20px'>
  <h4>Copies</h4>
  <% if (book_instances.length > 0) { %>

  <% for( let val of book_instances ) { %>

  <% if (val.status == "Available") { %>
  <p class="text-success"><%= val.status %></p>
  <% } else if (val.status == "Maintenance") { %>
  <p class="text-danger"><%= val.status %></p>
  <% } else { %>
  <p class="text-warning"><%= val.status %></p>
  <% } %>
  <p><strong>Imprint:</strong><%= val.imprint %></p>
  <% if (val.status!='Available') { %>
  <p>(Due: <%= val.due_back_formatted %>)</p>
  <% } %>
  <p><strong>Id:</strong><a href="<%= val.url %>"><%= val._id %></a></p>
  <% } %>
  <% }else{ %>
  <p>There are no copies of this book in the library.</p>
  <% } %>
</div>