<h1><%= title %></h1>
<ul>
  <% if (author_list.length > 0) { %>
  <% for(  author of author_list ) { %>
  <li>
    <a href="<%= author.url  %>"><%= author.name %></a>
    (<%= author.date_of_birth_formatted !== "Invalid DateTime" ?
        author.date_of_birth_formatted : ""
        %> -
    <%= author.date_of_death_formatted !== "Invalid DateTime" ?
        author.date_of_death_formatted : ""%> )
  </li>
  <% } %>
  <% }else{ %>
  <li>There are no authors.</li>
  <% } %>
</ul>